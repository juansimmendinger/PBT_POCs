{
  "name": "pbt-qt",
  "scripts": {
    "test": "npx hardhat test",
    "build": "npx thirdweb@latest detect",
    "coverage": "yarn hardhat coverage",
    "compile": "yarn hardhat compile",
    "deploy": "npx thirdweb@latest deploy",
    "release": "npx thirdweb@latest release",
    "deploy:local": "hardhat deploy --show-stack-traces --network localhost",
    "deploy:goerli": "hardhat deploy --show-stack-traces --network goerli",
    "deploy:sepolia": "hardhat deploy --show-stack-traces --network sepolia",
    "deploy:ethereum": "hardhat deploy --show-stack-traces --network ethereum",
    "typechain": "npx typechain 'artifacts/contracts/**/!(*.dbg).json' --target ethers-v5"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.4.7",
    "@ethersproject/providers": "^5.4.7",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.2",
    "@nomiclabs/hardhat-etherscan": "^3.1.6",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^20.2.5",
    "chai": "^4.2.0",
    "ethers": "^5.4.7",
    "hardhat": "^2.13.0",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-deploy": "^0.11.30",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^2.8.3",
    "solidity-coverage": "^0.8.2",
    "ts-node": ">=8.0.0",
    "typechain": "^8.1.0",
    "typescript": ">=4.5.0"
  },
  "dependencies": {
    "@chiru-labs/pbt": "^0.3.0",
    "@openzeppelin/contracts": "^4.8.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.1",
    "@thirdweb-dev/contracts": "^3",
    "dotenv": "^16.0.3",
    "global": "^4.4.0"
  }
}